                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Header="{x:Static Member=local:UIRes.HdrName}" UniqueName="PName" DataMemberBinding="{Binding PName}" 
