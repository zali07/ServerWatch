                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </telerik:GridViewDataColumn.CellTemplate>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Header="{x:Static Member=local:UIRes.HdrDeliveryLocationCode}" UniqueName="IdDeliveryLocation" DataMemberBinding="{Binding IdDeliveryLocation}"
