                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="Background" Value="{Binding MapHeaderId, Converter={StaticResource GreenCellBackgroundConverter}}"/>
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
