                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="Background" Value="{Binding MapIdLoc, Converter={StaticResource GreenCellBackgroundConverter}}"/>
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Header="{x:Static Member=local:UIRes.HdrMappingOn}" UniqueName="NameCheckBox"
                                                        ColumnGroupName="DigiDoc" IsGroupable="False" IsFilterable="False" DataMemberBinding="{Binding MapName}">
                                <telerik:GridViewDataColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding MapName, Mode=TwoWay}"
                                                  ClickMode="Press"
                                                  Focusable="False"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </telerik:GridViewDataColumn.CellTemplate>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Header="{x:Static Member=local:UIRes.HdrDeliveryLocationName}" UniqueName="PartnerName" DataMemberBinding="{Binding PartnerName}"
                                                        ColumnGroupName="DigiDoc" IsGroupable="False" ShowDistinctFilters="False">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="Background" Value="{Binding MapName, Converter={StaticResource GreenCellBackgroundConverter}}"/>
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Header="{x:Static Member=local:UIRes.HdrMappingOn}" UniqueName="AddressCheckBox"
                                                        ColumnGroupName="DigiDoc" IsGroupable="False" IsFilterable="False" DataMemberBinding="{Binding MapAddress}">
                                <telerik:GridViewDataColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding MapAddress, Mode=TwoWay}"
                                                  ClickMode="Press"
                                                  Focusable="False"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </telerik:GridViewDataColumn.CellTemplate>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Header="{x:Static Member=local:UIRes.HdrCity}" UniqueName="City" DataMemberBinding="{Binding City}"
                                                        ColumnGroupName="DigiDoc" IsGroupable="False" ShowDistinctFilters="False">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="Background" Value="{Binding MapAddress, Converter={StaticResource GreenCellBackgroundConverter}}"/>
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewDataColumn Header="{x:Static Member=local:UIRes.HdrAddress}" UniqueName="Address" DataMemberBinding="{Binding Address}"
                                                        ColumnGroupName="DigiDoc" IsGroupable="False" ShowDistinctFilters="False">
                                <telerik:GridViewDataColumn.CellStyle>
                                    <Style TargetType="telerik:GridViewCell">
                                        <Setter Property="Background" Value="{Binding MapAddress, Converter={StaticResource GreenCellBackgroundConverter}}"/>
                                    </Style>
                                </telerik:GridViewDataColumn.CellStyle>
                            </telerik:GridViewDataColumn>
                            <telerik:GridViewComboBoxColumn Header="{x:Static Member=local:UIRes.HdrDivision}" UniqueName="CodeGest" 
                                                            IsGroupable="False" ShowDistinctFilters="False" ColumnGroupName="Mapping" 
                                                            ItemTemplate="{StaticResource CodeGestComboBoxItemTemplate}"
                                                            DataMemberBinding="{Binding CodeGest}" ItemsSource="{Binding Divisions}" 
                                                            DisplayMemberPath="Name" SelectedValueMemberPath="Code" Width="360"
                                                            IsComboBoxEditable="True" EditTriggers="CellClick" FilterMemberPath="Name"
                                                            TextSearch.TextPath="Code">
                                <telerik:GridViewComboBoxColumn.EditorStyle>
                                    <Style TargetType="telerik:RadComboBox">
                                        <Setter Property="IsFilteringEnabled" Value="True"/>
                                        <Setter Property="StaysOpenOnEdit" Value="True"/>
                                        <Setter Property="OpenDropDownOnFocus" Value="True"/>
                                        <Setter Property="ItemsPanel">
                                            <Setter.Value>
                                                <ItemsPanelTemplate>
                                                    <StackPanel/>
                                                </ItemsPanelTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </telerik:GridViewComboBoxColumn.EditorStyle>
                            </telerik:GridViewComboBoxColumn>
                            <telerik:GridViewComboBoxColumn Header="{x:Static Member=local:UIRes.HdrCostCenter}" UniqueName="CodeCen" 
                                                            IsGroupable="False" ShowDistinctFilters="False" ColumnGroupName="Mapping"
                                                            ItemTemplate="{StaticResource CodeCentComboBoxItemTemplate}"
                                                            DataMemberBinding="{Binding CodeCen}" ItemsSource="{Binding CostCenters}" 
                                                            DisplayMemberPath="Code" SelectedValueMemberPath="Code"/>
                        </telerik:RadGridView.Columns>
                    </telerik:RadGridView>

                    <silver:CircularProgressBar Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                            x:FieldModifier="private" Name="ProgressBar" Width="20" Height="20" Margin="5"
                            Visibility="{Binding IsLoading, Converter={StaticResource SilverVisibilityConverter}, ConverterParameter=True}"/>

                    <Button Grid.Row="1" Margin="5" Padding="14,3" TabIndex="113" Name="AddDeliveryLocationButton"
                            Content="{x:Static Member=local:UIRes.CmdAutoCompleteDeliveryLocations}" 
                            Command="{Binding AutoCompleteDeliveryLocationsCommand}"
                            HorizontalAlignment="Right"
                            ToolTip="{x:Static Member=local:UIRes.StiAutoCompleteDeliveryLocations}"/>
                </Grid>
            </telerik:RadTabItem>

            <telerik:RadTabItem Header="{x:Static Member=local:UIRes.TabProducts}" IsEnabled="{Binding IsMappingTabsEnabled}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" x:Name="sectorRow"/>
                        <RowDefinition Height="*" MinHeight="60"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,3,5,0">
                        <Label Content="{x:Static Member=local:UIRes.LblSector}" Target="{Binding ElementName=SectorComboBox}"/>
                        <telerik:RadComboBox x:FieldModifier="private" Name="SectorComboBox" TabIndex="115"
                                                 VerticalAlignment="Bottom" Width="100"
                                                 IsEditable="True" StaysOpenOnEdit="True" CanAutocompleteSelectItems="False" 
                                                 IsTextSearchEnabled="True"
                                                 ItemsSource="{Binding Sectors}"
                                                 ItemTemplate="{StaticResource SectorComboBoxItemTemplate}"
                                                 SelectedValuePath="Code" telerik:TextSearch.TextPath="Name"
                                                 silver:StatusInfo.Description="{x:Static Member=local:UIRes.StiPersonPartner}">
                            <telerik:RadComboBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </telerik:RadComboBox.ItemsPanel>
                        </telerik:RadComboBox>
                    </StackPanel>

                    <StackPanel Margin="5" Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right">
                        <CheckBox VerticalAlignment="Center" Margin="5,0,5,0" TabIndex="30" Name="IncludeMappedProductFromInvoiceCheckBox"
                                  Content="{x:Static Member=local:UIRes.ChkIncludeMappedProductsFromInvoice}"
                                  IsChecked="{Binding IsMappedProductFromInvoiceOnlyShown, Mode=TwoWay}" 
                                  IsEnabled="{Binding IsMappingOpenWithInvoice}"/>
                        <CheckBox VerticalAlignment="Center" Margin="5,0,5,0" TabIndex="30" Name="IncludeMappedProductCheckBox"
                                  Content="{x:Static Member=local:UIRes.ChkIncludeMappedProducts}"
                                  IsChecked="{Binding IsMappedProductShown, Mode=TwoWay}" />
                    </StackPanel>

