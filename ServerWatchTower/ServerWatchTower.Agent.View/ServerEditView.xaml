                        </telerik:RadGridView.ColumnGroups>
                        <telerik:RadGridView.Columns>
                            <telerik:GridViewDataColumn Header="{x:Static Member=local:UIRes.HdrPartnerProudctCode}" UniqueName="PInNom" DataMemberBinding="{Binding PCodePartner}" 
                                                        IsGroupable="False" ShowDistinctFilters="False" ColumnGroupName="DigiDoc">
